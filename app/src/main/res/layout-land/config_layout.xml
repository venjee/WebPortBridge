<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj3"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50.0dip"
        android:layout_marginRight="300.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/common_btn"
        android:text="CONFIRM"
        android:textColor="#ffffffff"
        android:textSize="22.0sp" />

    <Button
        android:id="@+id/displaySet"
        android:layout_width="150.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50.0dip"
        android:layout_marginRight="80.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/common_btn"
        android:text="DISPLAY"
        android:textColor="#ffffffff"
        android:textSize="22.0sp" />

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50.0dip"
        android:layout_marginLeft="100.0dip"
        android:text="TextView"
        android:textSize="25.0sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20.0dip"
        android:layout_marginLeft="20.0dip"
        android:text="For more information please visit: www.waes.cn/ipmonitor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_weight="1.0"
                android:text="IP Monitor Control Center"
                android:textColor="@color/colorPrimary"
                android:textSize="36.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/soft_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="TextView"
                android:textSize="20.0dip" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80.0dip"
                android:layout_marginTop="5.0dip"
                android:gravity="right"
                android:text="TextView"
                android:textSize="30.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="112.0dip"
                android:layout_height="260.0dip"
                android:layout_gravity="center|left"
                android:layout_marginLeft="80.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/zj" />

            <LinearLayout
                android:layout_width="300.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/screen"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="Orientation"
                        android:textColor="#ffffffff"
                        android:textSize="22.0dip" />

                    <Switch
                        android:id="@+id/screenSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="25.0dip"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:textColor="#ffffffff"
                        android:textSize="22.0dip"
                        android:textOff="Landscape"
                        android:textOn="Portrait" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="IP Mode"
                        android:textColor="#ffffffff"
                        android:textSize="22.0dip" />

                    <Switch
                        android:id="@+id/ip_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="25.0dip"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:textColor="#ffffffff"
                        android:textSize="22.0sp"
                        android:textOff="DHCP"
                        android:textOn="MANUAL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="IP Address"
                        android:textColor="#ffffffff"
                        android:textSize="22.0dip" />

                    <EditText
                        android:id="@+id/ip_address"
                        android:layout_width="200.0dip"
                        android:layout_height="25.0dip"
                        android:layout_gravity="right"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="Enter Address"
                        android:text="255.255.255.255"
                        android:textColor="#ffffffff"
                        android:textColorHint="@android:color/holo_orange_dark"
                        android:textSize="22.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ip_config_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="35.0dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:gravity="center|left"
                            android:text="Subnet Mask"
                            android:textColor="#ffffffff"
                            android:textSize="22.0dip" />

                        <EditText
                            android:id="@+id/netmask"
                            android:layout_width="200.0dip"
                            android:layout_height="25.0dip"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="center|right"
                            android:hint="Enter Netmask"
                            android:text="255.255.255.255"
                            android:textColor="#ffffffff"
                            android:textColorHint="@android:color/holo_orange_dark"
                            android:textSize="22.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="35.0dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1.0"
                            android:gravity="center|left"
                            android:text="Gateway"
                            android:textColor="#ffffffff"
                            android:textSize="22.0dip" />

                        <EditText
                            android:id="@+id/gateway"
                            android:layout_width="200.0dip"
                            android:layout_height="25.0dip"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="center|right"
                            android:hint="Enter Gateway"
                            android:text="255.255.255.255"
                            android:textColor="#ffffffff"
                            android:textColorHint="@android:color/holo_orange_dark"
                            android:textSize="22.0dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="35.0dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1.0"
                            android:gravity="center|left"
                            android:text="DNS"
                            android:textColor="#ffffffff"
                            android:textSize="22.0dip" />

                        <EditText
                            android:id="@+id/dns"
                            android:layout_width="200.0dip"
                            android:layout_height="25.0dip"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="center|right"
                            android:hint="Enter DNS"
                            android:text="255.255.255.255"
                            android:textColor="#ffffffff"
                            android:textColorHint="@android:color/holo_orange_dark"
                            android:textSize="22.0dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left|top"
                        android:gravity="left"
                        android:text="URL"
                        android:textColor="@android:color/background_light"
                        android:textSize="22.0sp" />

                    <EditText
                        android:id="@+id/control"
                        android:layout_width="fill_parent"
                        android:layout_height="25.0dip"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10.0dip"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="Enter URL"
                        android:text="255.255.255.255"
                        android:textColor="#ffffffff"
                        android:textColorHint="@android:color/holo_orange_dark"
                        android:textColorLink="@android:color/holo_orange_dark"
                        android:textSize="22.0sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80.0dip"
            android:layout_marginRight="80.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center|left"
            android:text="Visit http://www.waes.cn/ipmonitor to start developing"
            android:textColor="#ffffffff"
            android:textSize="25.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:text="Well-known Advanced Execution Systems Inc."
            android:textColor="#ffffffff"
            android:textSize="24.0sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>